<h1>Product</h1>
<table>
    <tr>
        <th>Name</th>
        <td>{{product.name}}</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>{{product.description}}</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>{{product.price}}</td>
    </tr>
    <tr>
        <th></th>
        <td>
            <button onclick="window.location.href='./{{product.id}}/edit'">EDIT ?</button>
            
        </td>
    </tr>
    <tr>
        <th></th>
        <td>
            <form method="POST" action="/products/{{ product.id }}?_method=DELETE">
                <input type="submit" value="DELETE ?">
            </form>
        </td>
    </tr>
</table>